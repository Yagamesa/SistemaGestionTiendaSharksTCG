@model IEnumerable<ProyectoMDGSharksWeb.Models.Egreso>

@{
    ViewBag.Title = "Listado de Egresos";
    var fechaInicio = ViewBag.FechaInicio as string ?? "";
    var fechaFin = ViewBag.FechaFin as string ?? "";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
}

<h1>Listado de Egresos</h1>

<a href="@Url.Action("Create", "Egresos")" class="btn-nuevo">+ Nuevo Egreso</a>

<form method="get" class="form-filtros" style="margin-bottom: 20px;">
    <input type="date" name="fechaInicio" value="@fechaInicio" class="input-text" />
    <input type="date" name="fechaFin" value="@fechaFin" class="input-text" />
    <button type="submit" class="btn-filtrar">Buscar</button>
    <a href="@Url.Action("Index", "Egresos")" class="btn-limpiar">Limpiar</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Monto (Bs)</th>
            <th>Tipo de Egreso</th>
            <th>Usuario Responsable</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var egreso in Model)
            {
                <tr>
                    <td>@(egreso.Fecha?.ToString("yyyy-MM-dd") ?? "Sin fecha")</td>
                    <td>@egreso.Monto.ToString("F2")</td>
                    <td>@egreso.IdTipoEgresoNavigation?.Nombre</td>
                    <td>@egreso.IdUsuarioNavigation?.Nombre</td>
                    <td>@egreso.Descripcion</td>
                    <td>
                        <a href="@Url.Action("Details", "Egresos", new { id = egreso.Id })" class="btn btn-ver">Ver</a>
                        <a href="@Url.Action("Edit", "Egresos", new { id = egreso.Id })" class="btn btn-editar">Editar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">No se encontraron egresos.</td></tr>
        }
    </tbody>
</table>

<div class="pagination">
    @for (int i = 1; i <= totalPages; i++)
    {
        if (i == currentPage)
        {
            <span class="page current">@i</span>
        }
        else
        {
            <a class="page" href="@Url.Action("Index", new { page = i, fechaInicio = fechaInicio, fechaFin = fechaFin })">@i</a>
        }
    }
</div>

<style>
    h1 {
        font-weight: bold;
        color: #001f3f;
        margin-bottom: 20px;
    }

    .btn-nuevo {
        background-color: #28a745;
        color: white;
        padding: 10px 16px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        margin-bottom: 10px;
        display: inline-block;
    }

        .btn-nuevo:hover {
            background-color: #218838;
        }

    .form-filtros {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
    }

    .input-text, .btn-filtrar, .btn-limpiar {
        padding: 8px 12px;
        font-size: 14px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn-filtrar {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

        .btn-filtrar:hover {
            background-color: #0056b3;
        }

    .btn-limpiar {
        background-color: darkred;
        color: white;
        font-weight: bold;
        text-decoration: none;
    }

        .btn-limpiar:hover {
            background-color: #a50000;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

    th, td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #0B3D91;
        color: white;
    }

    tr:hover {
        background-color: #00bfff;
        color: #0B3D91;
    }

    .btn {
        padding: 6px 12px;
        margin-right: 5px;
        font-weight: bold;
        border-radius: 4px;
        text-decoration: none;
        color: white;
    }

    .btn-ver {
        background-color: #17a2b8;
    }

    .btn-editar {
        background-color: #ffc107;
        color: black;
    }

    .btn-ver:hover {
        background-color: #138496;
    }

    .btn-editar:hover {
        background-color: #e0a800;
    }

    .pagination {
        margin-top: 20px;
        text-align: center;
    }

    .page {
        display: inline-block;
        padding: 8px 12px;
        margin: 4px;
        border: 1px solid #ccc;
        border-radius: 4px;
        text-decoration: none;
        color: #0B3D91;
        font-weight: bold;
    }

        .page.current {
            background-color: #0B3D91;
            color: white;
        }

        .page:hover {
            background-color: #00bfff;
            color: white;
        }
</style>
