@model IEnumerable<ProyectoMDGSharksWeb.Models.Torneo>
@{
    ViewBag.Title = "Torneos";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var filtroNombre = ViewBag.FiltroNombre as string ?? "";
    var fechaInicio = ViewBag.FechaInicio as string ?? "";
    var fechaFin = ViewBag.FechaFin as string ?? "";
}

<h1>Listado de Torneos</h1>

<a href="@Url.Action("Create", "Torneos")" class="btn-nuevo">+ Nuevo Torneo</a>

<form method="get" class="form-filtros">
    <input type="text" name="nombre" placeholder="Buscar por nombre..." value="@filtroNombre" class="input-text" />
    <input type="date" name="fechaInicio" value="@fechaInicio" class="input-date" />
    <input type="date" name="fechaFin" value="@fechaFin" class="input-date" />
    <button type="submit" class="btn-filtrar">Buscar</button>
    <a href="@Url.Action("Index", "Torneos")" class="btn-limpiar">Limpiar Filtro</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Entrada</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var torneo in Model)
            {
                <tr>
                    <td>@torneo.Nombre</td>
                    <td>@torneo.Fecha.ToString("yyyy-MM-dd")</td>
                    <td>@torneo.Entrada.ToString("F2") Bs</td>
                    <td>
                        @if (torneo.Estado == "Completado")
                        {
                            <span class="badge badge-completado">Completado</span>
                        }
                        else
                        {
                            <span class="badge badge-curso">En Curso</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "Torneos", new { id = torneo.Id })" class="btn btn-ver">Ver</a>
                       
                       
                        @if (torneo.Estado == "En Curso")
                        {
                            <a href="@Url.Action("Edit", "Torneos", new { id = torneo.Id })" class="btn btn-editar">Editar</a>

                            <a href="@Url.Action("Registrar", "GanadoresTorneo", new { idTorneo = torneo.Id })" class="btn btn-mini btn-curso">Registrar Ganadores</a>

                            <form asp-action="DeleteConfirmed" asp-controller="Torneos" asp-route-id="@torneo.Id"
                                  method="post" style="display:inline;"
                                  onsubmit="return confirm('¿Seguro que quieres eliminar este torneo? Se perderá de manera definitiva.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>

                        }
                        else
                        {
                            <a href="@Url.Action("VerGanadores", "GanadoresTorneo", new { idTorneo = torneo.Id })" class="btn btn-completado">Ganadores Registrados</a>


                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">No hay torneos registrados.</td></tr>
        }
    </tbody>
</table>

<div class="pagination">
    @for (int i = 1; i <= totalPages; i++)
    {
        if (i == currentPage)
        {
            <span class="page current">@i</span>
        }
        else
        {
            <a class="page" href="@Url.Action("Index", new { page = i, nombre = filtroNombre, fechaInicio, fechaFin })">@i</a>
        }
    }
</div>

<style>
    h1 {
        font-weight: bold;
        color: #001f3f;
