    }

    .badge-completado {
        background-color: seagreen;
        color: white;
    }

    .pagination {
        margin-top: 20px;
        text-align: center;
    }

    .page {
        display: inline-block;
        padding: 8px 12px;
        margin: 4px;
        border: 1px solid #ccc;
        border-radius: 4px;
        text-decoration: none;
        color: #0B3D91;
        font-weight: bold;
    }

        .page.current {
            background-color: #0B3D91;
            color: white;
        }

        .page:hover {
            background-color: #00bfff;
            color: white;
        }
</style>
