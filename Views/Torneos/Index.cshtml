        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        margin-bottom: 10px;
        display: inline-block;
    }

        .btn-nuevo:hover {
            background-color: #218838;
        }

    .form-filtros {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
        align-items: center;
        flex-wrap: wrap;
    }

    .input-text, .input-date, .btn-filtrar, .btn-limpiar {
        padding: 8px 12px;
        font-size: 14px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .input-text {
        width: 250px;
    }

    .btn-filtrar {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

        .btn-filtrar:hover {
            background-color: #0056b3;
        }

    .btn-limpiar {
        background-color: darkred;
        color: white;
        font-weight: bold;
        text-decoration: none;
    }

        .btn-limpiar:hover {
            background-color: #a50000;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

    th, td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #0B3D91;
        color: white;
    }

    tr:hover {
        background-color: #00bfff;
        color: #0B3D91;
    }

    .btn {
        padding: 6px 12px;
        margin-right: 5px;
        font-weight: bold;
        border-radius: 4px;
        text-decoration: none;
        color: white;
    }

    .btn-ver {
        background-color: #17a2b8;
    }

        .btn-ver:hover {
            background-color: #138496;
        }

    .btn-editar {
        background-color: #ffc107;
        color: black;
    }

        .btn-editar:hover {
            background-color: #e0a800;
            color: white;
        }

    .btn-curso {
        background-color: crimson;
    }

        .btn-curso:hover {
            background-color: darkred;
        }

    .btn-mini {
        font-size: 13px;
        padding: 4px 8px;
    }

    .btn-danger {
        background-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }

    .btn-completado {
        background-color: seagreen;
