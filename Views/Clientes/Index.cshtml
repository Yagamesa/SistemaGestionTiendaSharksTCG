@model List<ProyectoMDGSharksWeb.Models.Cliente>
@{
    ViewBag.Title = "Clientes";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var filtroBusqueda = ViewBag.FiltroBusqueda as string ?? "";
}

<h1>Listado de Clientes</h1>

<a href="@Url.Action("Create", "Clientes")" class="btn-nuevo">+ Nuevo Cliente</a>

<form method="get" class="form-filtros" style="margin-bottom: 20px;">
    <input type="text" name="busqueda" placeholder="Buscar por nombre, apellido o CI..." class="input-text"
           value="@filtroBusqueda" />
    <button type="submit" class="btn-filtrar">Buscar</button>
    <a href="@Url.Action("Index", "Clientes")" class="btn-limpiar">Limpiar</a>
</form>

@if (TempData["Mensaje"] != null)
{
    <div style="background:#d4edda; color:#155724; padding:10px; border-radius:5px; margin-bottom:10px;">
        @TempData["Mensaje"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>CI</th>
            <th>Celular</th>
            <th>SharkCoins</th>
            <th>Deuda</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nombre @cliente.ApellidoPaterno @cliente.ApellidoMaterno</td>
                    <td>@cliente.Ci</td>
                    <td>@cliente.Celular</td>
                    <td>@cliente.SharkCoins?.ToString("F2")</td>
                    <td>@cliente.Deuda?.ToString("F2") Bs</td>
                    <td>
                        <a href="@Url.Action("Details", "Clientes", new { id = cliente.Id })" class="btn btn-ver">Ver</a>
                        <a href="@Url.Action("Edit", "Clientes", new { id = cliente.Id })" class="btn btn-editar">Editar</a>
                        <a href="@Url.Action("VerCodigos", "Clientes", new { id = cliente.Id })" class="btn btn-codigos">Códigos</a>
                        <!--<a href="@Url.Action("UsarSharkcoins", "Clientes", new { id = cliente.Id })" class="btn btn-sharkcoins">SharkCoins</a>-->

                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">No hay clientes registrados.</td></tr>
        }
    </tbody>
</table>

<div class="pagination">
    @for (int i = 1; i <= totalPages; i++)
    {
        if (i == currentPage)
        {
            <span class="page current">@i</span>
        }
        else
        {
            <a class="page" href="@Url.Action("Index", new { page = i, busqueda = filtroBusqueda })">@i</a>
        }
    }
</div>


