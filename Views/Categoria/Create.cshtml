@model ProyectoMDGSharksWeb.Models.Categoria

@{
    ViewBag.Title = "Crear Categoría";
}

<style>
    h1 {
        font-weight: 700;
        color: var(--azul-oscuro);
        user-select: none;
    }

    form div {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 6px;
    }

    input[type="text"],
    textarea {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
        font-family: inherit;
        resize: vertical;
        transition: border-color 0.3s ease;
    }

        input[type="text"]:focus,
        textarea:focus {
            border-color: var(--celeste);
            outline: none;
        }

    span.text-danger {
        color: crimson;
        font-weight: 600;
    }

    button, a.btn-cancelar {
        padding: 10px 18px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s ease;
        text-decoration: none;
        user-select: none;
        display: inline-block;
    }

    button {
        background-color: var(--azul-oscuro);
        color: var(--blanco);
    }

        button:hover {
            background-color: var(--celeste);
            color: var(--azul-oscuro);
        }

    a.btn-cancelar {
        background-color: #ccc;
        color: #333;
        margin-left: 15px;
    }

        a.btn-cancelar:hover {
            background-color: #bbb;
        }
</style>

<h1>Crear Categoría</h1>

<form asp-action="Create" method="post" novalidate>
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" rows="4"></textarea>
    </div>

    <button type="submit">Crear</button>
    <a href="@Url.Action("Index")" class="btn-cancelar">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
